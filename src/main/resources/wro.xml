<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro">

    <!-- DataTables -->
    <group name="datatables">
        <js>/webjars/datatables.net/js/jquery.dataTables.js</js>
        <js>/webjars/datatables.net-se/js/dataTables.semanticui.js</js>
        <css>/webjars/datatables.net-se/css/dataTables.semanticui.css</css>
    </group>

    <!-- Isotope -->
    <group name="isotope">
        <js minimize="false">/webjars/isotope-layout/dist/isotope.pkgd.min.js</js>
    </group>

    <!-- Clipboard -->
    <group name="clipboard">
        <js minimize="false">/webjars/clipboard/dist/clipboard.min.js</js>
    </group>

    <!-- Semantic UI -->
    <group name="semantic-ui">
        <css minimize="false">/semantic-ui/dist/semantic.min.css</css>
        <js minimize="false">/webjars/jquery/dist/jquery.min.js</js>
        <js minimize="false">/semantic-ui/dist/semantic.min.js</js>
    </group>

    <!-- Admin area -->
    <group name="admin">
        <group-ref>semantic-ui</group-ref>
        <group-ref>datatables</group-ref>
    </group>

    <!-- Main site -->
    <group name="main">
        <group-ref>semantic-ui</group-ref>
        <group-ref>isotope</group-ref>
        <group-ref>clipboard</group-ref>
    </group>

</groups>