*******************************/

.segment.main {
  margin: 0;
  border-radius: 0;
}

.segment.footer {
  border-radius: 0;
  border-top: 1px solid #d8dee2;
  border-right: 0;
  border-bottom: 0;
  border-left: 0;
}

.segment.header {
  border-radius: 0;
  border-top: 0;
  border-right: 0;
  border-bottom: 1px solid #d8dee2;
  border-left: 0;
}
