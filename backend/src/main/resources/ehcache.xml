<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="false" monitoring="off" dynamicConfig="true">

    <diskStore path="java.io.tmpdir"/>

    <cache name="summonerSpells"
           maxEntriesLocalHeap="25"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="0"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="items"
           maxEntriesLocalHeap="300"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="450"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="champions"
           maxEntriesLocalHeap="150"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="300"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="maps"
           maxEntriesLocalHeap="10"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="0"
           diskExpiryThreadIntervalSeconds="3600"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="versions"
           maxEntriesLocalHeap="50"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="150"
           diskExpiryThreadIntervalSeconds="3600"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="builds"
           maxEntriesLocalHeap="50"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="0"
           maxEntriesLocalDisk="150"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

</ehcache>
