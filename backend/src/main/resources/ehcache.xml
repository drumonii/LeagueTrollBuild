<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="false" monitoring="off" dynamicConfig="true">

    <diskStore path="java.io.tmpdir"/>

    <cache name="summonerSpells"
           maxElementsInMemory="25"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="35"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="items"
           maxElementsInMemory="300"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="450"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="champions"
           maxElementsInMemory="150"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="300"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="maps"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="20"
           diskExpiryThreadIntervalSeconds="3600"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="versions"
           maxElementsInMemory="50"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="150"
           diskExpiryThreadIntervalSeconds="3600"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="builds"
           maxElementsInMemory="50"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="28800"
           maxElementsOnDisk="150"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </cache>

</ehcache>